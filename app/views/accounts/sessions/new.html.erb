<div class="content internal">
  <section>
    <div class="wrapper">
      <div class="forms">
        
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="left">
          <h2>Entrar</h2>
          <span class="subtitle">Tienes una cuenta? acá puedes acceder!</span>
            <fieldset>
              <%= f.label :email %>
              <%= f.text_field :email, required: false, autofocus: true %>
            </fieldset>
            <fieldset>
              <label>Contraseña</label>
              <%= f.password_field :password, required: false, autofocus: true %>
            </fieldset>
            <fieldset class="remember">
              <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <label>Recordarme</label>
            </fieldset>
            <fieldset class="actions">
              <%= f.submit "Entrar",class: 'button blue'  %>
              <a href="/accounts/password/new">Recuperar contraseña</a>
            </fieldset>
        </div>
        <% end %>
        <div class="right">
          <h2>También puedes entrar utilizando tus redes sociales.</h2>
          <span class="subtitle">Ágil y rápido.</span>
          <div class="fblogin">
            <%= link_to account_facebook_omniauth_authorize_path,:class => 'button blue btn-lg btn-social btn-facebook' do %>
               <div class='fa fa-facebook'></div> Login con Facebook
              <% end %>
          </div>
          <h2>No tienes una cuenta?</h2>
          <span class="subtitle">Crea tu cuenta de manera fácil y segura.</span>
          <a href='/accounts/sign_up' class="button blue">Crear una cuenta</a>
        </div>
      </div>

    </div>
  </section>
</div><!-- CONTENT END-->






