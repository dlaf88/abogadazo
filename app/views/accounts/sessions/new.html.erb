<%= render partial: "layouts/navigation" %>
<div class='content internal about'>
 <div class ='container'>
<h2 align='center'>Log in</h2>
<%= link_to account_omniauth_authorize_path(:facebook),:class => 'btn btn-lg btn-social btn-facebook' do %>
   <span class='fa fa-facebook'></span> Login con Facebook
   <% end %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "accounts/shared/links" %>
  </div>
</div>