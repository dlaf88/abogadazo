<%= render partial: "layouts/hotjar" %>
<%= render partial: "layouts/fbpixel" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash.any? %>
    <% flash.each do |key,value| %>
    <script>
      $(function() {
        BootstrapDialog.show({
          title: 'Menasaje de Abogadazo',
          message: '<%= j value %>',

          buttons: [{

          label: 'Cerrar',
          action: function(dialogItself){
          dialogItself.close();
        }
                             }]
                             });
      });
    </script>       
    <% end %>
  <% end %>

 
 
 
  
   
    

    <%= yield %>

